{
    "name": "tatter/frontend",
    "type": "library",
    "description": "Opinionated suite of frontend tech for CodeIgniter 4",
    "keywords": [
        "codeigniter",
        "codeigniter4",
        "frontend",
        "framework",
        "assets",
        "javascript",
        "css"
    ],
    "homepage": "https://github.com/tattersoftware/codeigniter4-frontend",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthew Gatner",
            "email": "mgatner@tattersoftware.com",
            "homepage": "https://tattersoftware.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "almasaeed2010/adminlte": "^3.0",
        "components/jquery": "^3.3",
        "datatables.net/datatables.net-bs4": "dev-master",
        "fortawesome/font-awesome": "^5.15 || ^6.0",
        "league/commonmark": "^2.0",
        "tatter/alerts": "^3.0",
        "tatter/assets": "^3.0",
        "tatter/layouts": "^1.0",
        "tatter/menus": "^1.0",
        "tatter/themes": "^2.0",
        "twbs/bootstrap": "^4.0"
    },
    "require-dev": {
        "codeigniter4/framework": "^4.1",
        "tatter/tools": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Tatter\\Frontend\\": "src"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/DataTables/Dist-DataTables-Bootstrap4.git"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "analyze": "phpstan analyze",
        "ci": [
            "Composer\\Config::disableProcessTimeout",
            "@deduplicate",
            "@analyze",
            "@test",
            "@inspect",
            "rector process",
            "@style"
        ],
        "deduplicate": "phpcpd app/ src/",
        "inspect": "deptrac analyze --cache-file=build/deptrac.cache",
        "mutate": "infection --threads=2 --skip-initial-tests --coverage=build/phpunit",
        "retool": "retool",
        "style": "php-cs-fixer fix --verbose --ansi --using-cache=no",
        "test": "phpunit"
    }
}
